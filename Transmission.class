import stamp.core.*;     

public class Transmission
{

private int speed;

//* Bot rijdt vooruit
public static void forward()
{
    motorL.update(196, 2304);
    motorR.update(150, 2304);
}

//* Bot rijdt achteruit
public static void backwards()
{
	motorL.update(150, 2304);
    motorR.update(196, 2304);
}

//* Bot stopt met rijden
public static void stop()
{
	motorL.stop();
	motorR.stop();
}

//* Bot maakt 'angle' graden draai 
public static void pivot(int angle)
{
	if (angle > 180)
	{
		turnRight();
		stop();
	}
	else
	{
		turnLeft();
		stop();
	}
}

//* Bot maakt 90 graden draai naar links
public static void turnLeft()
{
	motorL.update(196, 2304);
	motorR.update(196, 2304);
}

//* Bot maakt 90 graden draai naar rechts
public static void turnRight()
{
	motorL.update(150, 2304);
	motorR.update(150, 2304);	
	
}
//* Bot zal op de aangegeven snelheid rijden
public static void setSpeed(int speed)
{
	servoMotor.setSpeed(speed);
}

}
